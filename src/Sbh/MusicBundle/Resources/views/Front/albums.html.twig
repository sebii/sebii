{% extends "::base.html.twig" %}

{% block content %}
<ul class="nav nav-tabs">
  <li><a href="{{ path("sbh_music_front_artists") }}">Artistes</a></li>
  <li><a href="{{ path("sbh_music_front_albums") }}">Albums</a></li>
</ul>
<br />
<div class="row">
{% for album in albums %}
    <div class="col-sm-4 col-lg-3 music-artist">
        <a href="{{ path("sbh_music_front_album", {albumId: album.id}) }}">
            <img src="{% if album.image %}{{ asset("ii/music/_img/album_" ~ album.id ~ "_thumb.jpg") }}{% else %}{{ asset("bundles/sbhmusic/images/artist_0.jpg") }}{% endif %}" class="img-responsive music-artist-image" />
            <span class="music-artist-name">{{ album.name }}</span>
        </a>
        <span class="music-artist-stream">
        </span>
    </div>
{% endfor %}
</div>
<style>
    .music-artist {
        height: 260px;
    }
    .music-artist-stream {
        display: block;
        height: 32px;
    }
    .music-artist-stream img {
        height: 32px;
    }
</style>
{% endblock content %}