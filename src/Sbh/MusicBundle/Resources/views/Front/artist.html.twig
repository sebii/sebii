{% extends "::base.html.twig" %}

{% block breadcrumb %}
    <li><a href="/">Musique</a></li>
    <li><a href="{{ path("sbh_music_front_artist", {artistId: artist.id}) }}">{{ artist.name }}</a></li>
{% endblock breadcrumb %}

{% block pagetitle %}{{ artist.name }}{% endblock pagetitle %}

{% block content %}
<div class="row listen-on">
    <div class="col-sm-6 listen-on-deezer">
        {% if artist.musicDeezerArtists | length > 0 %}
            <a href="http://www.deezer.com/artist/{{ artist.musicDeezerArtists.first.deezerId }}" target="extSbh">
                <img src="{{ asset("bundles/sbhmusic/images/deezer-flat-circle-icon.png") }}" alt="(Deezer)" />
                Deezer
            </a>
        {% endif %}
    </div>
    <div class="col-sm-6 listen-on-spotify">
        {% if artist.musicSpotifyArtists | length > 0 %}
            <a href="https://open.spotify.com/artist/{{ artist.musicSpotifyArtists.first.spotifyId }}" target="extSbh">
                <img src="{{ asset("bundles/sbhmusic/images/spotify-flat-circle-icon.png") }}" alt="(Spotify)" />
                Spotify
            </a>
        {% endif %}
    </div>
</div>
<div class="row">
{% for album in albums %}
    <div class="col-sm-4 col-lg-3 music-artist">
        <a href="#">
            <img src="{{ asset("bundles/sbhmusic/images/album_0.png") }}" class="img-responsive music-artist-image" />
            <span class="music-artist-name">{{ album.name }}</span>
        </a>
    </div>
{% endfor %}
</div>
<style>
    .listen-on {
        padding-bottom: 10px;
    }
    .listen-on div a {
        display: inline-block;
        height: 30px;
        width: 100%;
        border-radius: 15px;
        color: #EEEEEE;
    }
    .listen-on .listen-on-deezer a {
        background-color: #484848;
    }
    .listen-on .listen-on-spotify a {
        background-color: #75ad01;
    }
    .listen-on div a img {
        height: 30px;
    }
</style>
{% endblock %}