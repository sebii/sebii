{% extends "::base.html.twig" %}

{% block title %}Login | {{ parent() }}{% endblock title %}

{% block content %}
<div class="row">
    <div class="col-sm-offset-2 col-sm-8 col-xs-12">
        <form action="{{ path("login_check") }}" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="username" class="col-sm-4 col-xs-12 col-lg-3 control-label">Login :</label>
                <div class="col-sm-8 col-xs-12 col-lg-9">
                    <input type="text" id="username" name="_username" placeholder="Login" class="form-control" value="{{ last_username }}" />
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-4 col-xs-12 col-lg-3 control-label">Mot de passe :</label>
                <div class="col-sm-8 col-xs-12 col-lg-9">
                    <input type="password" id="password" name="_password" placeholder="Mot de passe" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4 col-xs-12 col-lg-9 col-lg-offset-3">
                    <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" checked="checked" /> Se souvenir de moi</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4 col-xs-12 col-lg-9 col-lg-offset-3">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                        <a href="{{ path("home") }}" class="btn btn-default">Annuler</a>
                    </div>
                </div>
        </form>
    </div>
</div>
{% endblock %}